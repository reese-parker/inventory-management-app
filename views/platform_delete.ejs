<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/sidebar.ejs') %>
        <div class="col-sm-9">
          <h1><%= platform.name %> </h1>
          <hr>
            <% if (games.length > 0) { %> 
                <p>You must delete these games first:</p>
                <ul>
                      <% games.forEach(game => { %>
                        <li><a href=<%= game.url %> ><%= game.name %></a></li>
                <% }) %>
                </ul>
              <% } else { %>
                <form method="post">
                    <p>Are you sure you want to delete this platform?</p>
                    <input type="hidden" id="id" value=<%= platform._id %> >
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
                <br>
            <% } %>
            <hr>
                
            <a href=<%= platform.url %> >Back to platform details</a>
        </div>
      </div>
    </div>
  </body>
</html>
