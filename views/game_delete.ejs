<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/sidebar.ejs') %>
        <div class="col-sm-9">
          <h1><%= game.name %> </h1>
         
            <% if (game !== undefined) { %> 
                <p>Title: <%= game.name %> - <%= game.platform.name %> </p>
                <p>Description: <%= game.description %> </p>
               
            <% } %>
                <hr>

            <form method="post">
                <p>Are you sure you want to delete this game?</p>
                <input type="hidden" id="id" value=<%= game._id %> >
                <button class="btn btn-primary" type="submit">Delete</button>
            </form>
            <br>
            <br>
            <a href=<%= game.url %> >Back to game details</a>
            
            
        </div>
      </div>
    </div>
  </body>
</html>
